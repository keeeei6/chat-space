
.main-message
  .main-message__info
    .main-message__info__name
      = message.user.name
    .main-message__info__day
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-message__text
    - if message.content.present?
      %p.main-message__text__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?